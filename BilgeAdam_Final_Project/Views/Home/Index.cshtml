@{
    ViewData["Title"] = "Home Page";
}
@model List<GetMovieVM>

<div class="row">
    <div class="col-lg-12 col-12">
        <div class="text-center mb-5 pb-2">
            <h1 class="text-white">Listen to Pod Talk</h1>

            <p class="text-white">
                Listen it everywhere. Explore your fav podcasts.
            </p>
        </div>

        <div class="owl-carousel owl-theme" style="height:600px;">
           
            @foreach (var movie in Model)
            {
                <div class="owl-carousel-info-wrap item" style="height:550px;">
                    <img src="~/images/movies/@movie.Image" style="height:340px !important;"
                         class="owl-carousel-image img-fluid"
                         alt="" />
                         @if (movie.Name.Length > 25)
                        {
                            <h4>@movie.Name.Substring(0,25) ...</h4>
                        }
                        else
                        {
                            <h4>@movie.Name</h4>
                        }
                    <div class="owl-carousel-info">
                        @foreach (var category in movie.Categories)
                        {
                            <span class="badge">@category</span>
                        }
                    </div>

                    <div class="social-share">
                        <ul class="social-icon">
                            <li class="social-icon-item">
                                <a asp-action="MovieDetail" asp-route-id="@movie.Id" class="social-icon-link">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                            </li>

                            
                        </ul>
                    </div>
                </div>
            }
